<Window x:Class="TradeCenterAdmin.Views.Windows.AssingShop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeCenterAdmin.Views.Windows"
        mc:Ignorable="d" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="  Назначение магазина для области" Height="318" Width="461.6">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Магазины" VerticalAlignment="Top"/>

        <ListBox x:Name="lists" SelectedItem="{Binding SelectedShop,Mode=TwoWay}"
                 HorizontalAlignment="Left" Height="198" Margin="11,40,0,0" VerticalAlignment="Top" Width="426">

        </ListBox>
        <Button Click="select" Content="Назначить выбранный магазин" HorizontalAlignment="Left" Margin="11,243,0,0" VerticalAlignment="Top" Width="426" RenderTransformOrigin="0.0,0.177"/>

    </Grid>
</Window>
