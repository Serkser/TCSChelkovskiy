<Page x:Class="TradeCenterAdmin.Views.Pages.MapEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeCenterAdmin.Views"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="599" d:DesignWidth="866"
      Title="MapEditor">

    <Grid>
        <Canvas IsItemsHost="False">
            <Canvas.Background>
                <SolidColorBrush Opacity=".25" Color="Blue" />
            </Canvas.Background>

        </Canvas>
        <StackPanel Margin="643,0,-0.4,0.2">
            <Expander Header="Этажи" Height="100" Canvas.Left="696" Canvas.Top="10" Width="160" Margin="0,10,9.6,0">
                <Grid Background="#FFE5E5E5">
                    <TextBlock Text="Выбранный этаж :" FontSize="10" Margin="5,2,66.4,57.6" />
                    <ComboBox ItemsSource="{Binding Floors,Mode=TwoWay}" SelectedItem="{Binding SelectedFloor,Mode=TwoWay}" 
                              HorizontalAlignment="Left" Margin="5,20,0,0" VerticalAlignment="Top" Width="148"/>
                    <Button Content="Изменить этажи" HorizontalAlignment="Left" Margin="5,47,0,0" VerticalAlignment="Top" Width="148" Height="21"/>
                </Grid>
            </Expander>
            <Expander Header="Инструменты" Width="160" Margin="27,0,36.2,0" Height="318">
                <Grid Background="#FFE5E5E5">
                    <Button Command="{Binding UseHand}"  Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="59" Height="51"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,61,0,0" TextWrapping="Wrap" Text="Рука" VerticalAlignment="Top"/>
                    <Button Command="{Binding UseKiosk}" Content="Button" HorizontalAlignment="Left" Margin="83,10,0,0" VerticalAlignment="Top" Width="59" Height="51"/>
                    <TextBlock HorizontalAlignment="Left" Margin="83,61,0,0" TextWrapping="Wrap" Text="Киоск" VerticalAlignment="Top"/>
                    <Button Command="{Binding UseArea}" Content="Button" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Width="59" Height="51"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,130,0,0" TextWrapping="Wrap" Text="Область" VerticalAlignment="Top"/>
                    <Button Command="{Binding UseEntry}" Content="Button" HorizontalAlignment="Left" Margin="83,79,0,0" VerticalAlignment="Top" Width="59" Height="51"/>
                    <TextBlock HorizontalAlignment="Left" Margin="83,130,0,0" TextWrapping="Wrap" Text="Вход" VerticalAlignment="Top"/>
                    <Button Command="{Binding UseLift}" Content="Button" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top" Width="59" Height="51"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,199,0,0" TextWrapping="Wrap" Text="Лифт" VerticalAlignment="Top"/>
                    <Button Command="{Binding UseStairs}" Content="Button" HorizontalAlignment="Left" Margin="83,149,0,0" VerticalAlignment="Top" Width="59" Height="51"/>
                    <TextBlock HorizontalAlignment="Left" Margin="83,199,0,0" TextWrapping="Wrap" Text="Лестница" VerticalAlignment="Top"/>
                    <Button Command="{Binding UseWay}" Content="Button" HorizontalAlignment="Left" Margin="10,216,0,0" VerticalAlignment="Top" Width="59" Height="51"/>
                    <TextBlock HorizontalAlignment="Left" Margin="10,267,0,-0.6" TextWrapping="Wrap" Text="Путь" VerticalAlignment="Top"/>

                </Grid>
            </Expander>
        </StackPanel>
       
    </Grid>
</Page>
