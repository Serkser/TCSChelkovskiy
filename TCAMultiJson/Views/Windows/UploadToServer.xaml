<Window x:Class="TCAMultiJson.Views.Windows.UploadToServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCAMultiJson.Views.Windows"
        mc:Ignorable="d"
        Title="Заливка на сервер" Height="212" Width="506">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="30,34,0,0" Text="Путь к JSON файлу, который нужно залить" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding UploadJsonFilepath}"
            HorizontalAlignment="Left" Margin="30,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356"/>
        <Button Command="{Binding SelectJsonFilePath}"
            Content="Выбрать путь" HorizontalAlignment="Left" Margin="391,50,0,0" VerticalAlignment="Top" Height="25" Width="94"/>
        <Button Command="{Binding UploadFileToServer}"
            Content="Залить на сервак" HorizontalAlignment="Left" Margin="32,146,0,0" VerticalAlignment="Top" Height="25" Width="453"/>

    </Grid>
</Window>
